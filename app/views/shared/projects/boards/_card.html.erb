<div class="drag-container"></div>
<div class="board mx-3" data-controller="muuri" >
  <% boards.each do |board| %>
    <div class="board-column py-3">
      <div class="board-column-container" data-controller="edit-board">
        <div class="board-column-header p-0"  >
          <div data-edit-board-target = "card" data-action="click->edit-board#displayForm">
            <div data-edit-board-target = "infos" class="px-4">
              <%= board.name %>
            </div>
            <%= render "shared/projects/boards/form", project: @project, board: board %>
          </div>
        </div>
        <div class="board-column-content-wrapper">
          <div class="board-column-content" id="board-<%= board.id %>" >
            <%= render "shared/projects/boards/task", board: board %>
          </div>
        </div>
        <div class="board-column-footer">
          <div class="bg-background px-3 rounded-2 py-2 w-100 add-task-btn" id="add-task-<%= board.id %>" data-action="click->muuri#addTask" data-board-id="<%= board.id %>">
            Add Task
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>
 <%= render "shared/projects/assignees/create", project: @project, board: @board, task: @task, assignee: @assignee %>
