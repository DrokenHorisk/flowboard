<div class="modal fade" id="showAssigneesModal" tabindex="-1" aria-labelledby="showAssigneesModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-opened-content">
      <%= render "shared/modals/header" do %>
        <h5 class="modal-title" id="showAssigneesModalLabel">Assignee to :</h5>
        <%= image_tag "plus.svg", class: "icon rotate-45", data: { bs_dismiss: "modal" } %>
      <% end %>
      <%= render "shared/modals/content" do %>
        <%= form_for [project, board, task, assignee], url: { action: :create }, method: :post, remote: true, html: { class: "form" } do |f| %>
          <%= f.collection_select :user_id, User.all, :id, :first_name%>
          <%= render "shared/modals/footer" do %>
            <%= f.button :submit, class: "main-btn" %>
          <% end %>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
